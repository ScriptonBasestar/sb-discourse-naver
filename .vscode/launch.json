  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Existing Server",
      "type": "ruby_lsp",
      "request": "attach"
    },
    {
      "name": "RSpec - all",
      "type": "ruby_lsp",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rspec",
    },
    {
      "name": "RSpec - active spec file only",
      "type": "ruby_lsp",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rspec ${file}",
    }
  ]
}
